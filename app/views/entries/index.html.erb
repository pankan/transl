<h1>Translations History</h1>

<table style="width:300px">
  <thead>
    <tr>
      <th>Input</th>
      <th>From</th>
      <th>To</th>
      <th>Output</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.input %></td>
        <td><%= entry.from %></td>
        <td><%= entry.to %></td>
        <td><%= entry.output %></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', new_entry_path %>
